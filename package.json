{
	"name": "playims",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "pnpm@10.29.1",
	"scripts": {
		"dev": "vite dev --open",
		"updates": "ncu --interactive --format group",
		"db:generate": "drizzle-kit generate --config=drizzle.config.ts",
		"db:migrate:local": "wrangler d1 migrations apply playims-central-db-dev --local",
		"db:migrate:remote": "wrangler d1 migrations apply playims-central-db-dev --remote",
		"db:studio": "drizzle-kit studio --config=drizzle.config.ts",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"pwa-assets": "pwa-assets-generator",
		"build": "vite build",
		"preview": "vite preview"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260207.0",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^10.0.1",
		"@libsql/client": "^0.17.0",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.2.1",
		"@vite-pwa/assets-generator": "^1.0.2",
		"@vite-pwa/sveltekit": "^1.1.0",
		"baseline-browser-mapping": "^2.9.19",
		"drizzle-kit": "^0.31.8",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.50.0",
		"svelte-check": "^4.3.6",
		"tailwind-scrollbar": "^4.0.2",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"wrangler": "^4.63.0"
	},
	"dependencies": {
		"@tabler/icons-svelte": "^3.36.1",
		"dotenv": "^17.2.4",
		"drizzle-orm": "^0.45.1",
		"zod": "^4.3.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild",
			"sharp",
			"workerd"
		]
	}
}
